<BorderPane prefHeight="780.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mir.gametics.CreateOnePageController">
    <center>
        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Pane prefHeight="780.0" prefWidth="720.0">
                <ImageView fitHeight="780.0" fitWidth="720.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../picture/regpic.jpg" />
                </ImageView>
            </Pane>
            <AnchorPane prefHeight="780.0" prefWidth="500.0">

                <Label layoutX="125.0" layoutY="179.0" prefHeight="58.0" prefWidth="245.0" text="User Registration">
