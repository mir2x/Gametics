<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?><?import javafx.scene.control.CheckBox?><?import javafx.scene.control.Hyperlink?><?import javafx.scene.control.Label?><?import javafx.scene.control.TableView?><?import javafx.scene.control.TextField?><?import javafx.scene.layout.AnchorPane?><?import javafx.scene.layout.BorderPane?><?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="780.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mir.gametics.DatabasePageController">
    <center>
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>
    <right>
        <AnchorPane prefHeight="780.0" prefWidth="300.0" BorderPane.alignment="CENTER">

            <!--Search-->
            <Label layoutX="112.0" layoutY="36.0" text="Search Game" />
            <TextField fx:id="searchTextField" depthTest="DISABLE" layoutX="39.0" layoutY="95.0" prefHeight="26.0"
                prefWidth="246.0" promptText="Enter Game Title" />
            <CheckBox fx:id="exactMatchingCheckBox" layoutX="39.0" layoutY="136.0" prefHeight="27.0" prefWidth="127.0"
                text="Exact matching" />
            <Button fx:id="searchButton" layoutX="218.0" layoutY="137.0" text="Search" />
            <Hyperlink fx:id="advancedSearchHyperLink" layoutX="40.0" layoutY="170.0" text="Advanced Search"
                underline="true" />

            <!--Add Game-->
            <Label layoutX="106.0" layoutY="300.0" text="Add New Game" />
            <TextField fx:id="gameNameTextField" layoutX="62.0" layoutY="349.0" prefHeight="26.0" prefWidth="175.0"
                promptText="Enter Game Name" />
            <TextField fx:id="gameCategoryTextField" layoutX="62.0" layoutY="399.0" prefHeight="26.0" prefWidth="175.0"
                promptText="Enter Game Category" />
            <TextField fx:id="gameReleaseDateTextField" layoutX="62.0" layoutY="456.0" prefHeight="26.0" prefWidth="175.0"
                promptText="Enter Game Publish Date" />
            <TextField fx:id="gamePriceTextField" layoutX="63.0" layoutY="506.0" prefHeight="26.0" prefWidth="173.0"
                promptText="Enter Game Price" />
            <Button fx:id="addGameButton" layoutX="102.0" layoutY="574.0" text="Add Game" />

        </AnchorPane>
    </right>
    <bottom>
        <HBox prefHeight="30.0" prefWidth="1220.0" BorderPane.alignment="CENTER">
            <!--Delete Game-->
            <Button fx:id="deleteButton" text="Delete" />
        </HBox>
    </bottom>
</BorderPane>
