<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="780.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mir.gametics.DatabasePageController">
   <center>
      <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <AnchorPane prefHeight="780.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <Label layoutX="62.0" layoutY="220.0" text="Enter Game Name" />
            <TextField fx:id="gameNameField" layoutX="62.0" layoutY="256.0" />
            <Label layoutX="62.0" layoutY="307.0" text="Enter Game Category" />
            <TextField fx:id="gameCategoryField" layoutX="62.0" layoutY="347.0" />
            <Button layoutX="104.0" layoutY="415.0" onAction="#onAddGame" text="Add Game" />
      </AnchorPane>
   </right>
   <bottom>
      <HBox prefHeight="31.0" prefWidth="1220.0" BorderPane.alignment="CENTER">
            <Button text="Edit" fx:id="editBtn" />
            <Button text="Delete" fx:id="deleteBtn" />
      </HBox>
   </bottom>
</BorderPane>
